{
  "name": "my_new_app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "electron": "^11.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.1",
    "typescript": "4.1.3",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "start": "yarn clean && concurrently \"yarn build:main:dev\" \"yarn launch:dev\"",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "launch:dev": "concurrently -k \"yarn only:react\" \"wait-on ./dist/main.js && yarn run electron:dev\"",
    "clean": "rimraf ./dist/**/*",
    "build:main:dev": "cross-env NODE_ENV=development webpack-cli --watch --config ./config/electron-main-process.config.js",
    "build:main:prod": "yarn clean && cross-env NODE_ENV=production webpack-cli --config ./config/electron-main-process.config.js",
    "add:component": "npx generate-react-cli component",
    "only:react": "react-app-rewired start",
    "only:electron": "electron-forge start",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint:fix": "yarn lint:scss --fix && yarn lint --fix",
    "electron:dev": "wait-on tcp:3000 && electronmon .\"",
    "electron:build": "yarn clean && build:main:prod && wait-on ./dist/main.js && \"react-app-rewired build && electron-builder\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "dist/main.js",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/electron": "^1.6.10",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-is-dev": "^1.1.1",
    "@types/node": "12.19.0",
    "babel-loader": "8.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electronmon": "^1.1.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "react-app-rewire-aliases": "^0.2.0",
    "react-app-rewired": "^2.1.8",
    "recoil": "^0.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "ts-loader": "^8.0.14",
    "wait-on": "^5.2.1",
    "webpack-cli": "^4.4.0",
    "webpack-merge": "4.2.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "test_spectrum"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "homepage": "./",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint src/ --ext .js,.jsx,.ts,.tsx --fix"
    ],
    "main/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint main/ --ext .ts,.tsx --fix"
    ],
    "src/**/*.{css,scss}": [
      "prettier --write",
      "stylelint \"src/**/*.scss\" --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
